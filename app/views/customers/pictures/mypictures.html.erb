<div class="container my-5">
  <div class="row">
    <div class="toppage">
      <h2><b>投稿イラスト確認・編集</b><span class="total_count">(全<%= @pictures.total_count %>件)</span></h2>
    </div>
    <div class="item-box">
      <% @pictures.each do |picture| %>

        <div class="item-container">
          <%= link_to edit_picture_path(picture.id), class: "btn-link" do %>
            <div class="image-field">
              <% if picture.picture_image.attached? %>
                <%= image_tag picture.picture_image ,size:"180x130" %>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            </div>
            <p class="item-name">
              <%= picture.title %>
            </p>
          <% end %>
          <% if picture.is_active == true %>
            <p class="item-price"><%= picture.price * 10 %>コイン</p>
          <% elsif picture.is_active == false %>
            <p class="soldout">販売停止中</p>
          <% end %>
        </div>

	    <% end %>
	  </div>
	  <div class="picture-pagenate"><%= paginate @pictures %></div>
	</div>
</div>
