<div class="container back my-5">
  <div class="box1">
    <h1 class="buy">イラスト使用許可新規販売登録</h1>
  </div>

  <div class="row mt-5">
    <div class="col-6 mx-auto pb-5">
      <%= form_with model:@picture,method: :post,local:true do |f| %>
        <div class="form-group row">
          <div class="col-3">

          </div>
          <div class="col-3">
            <%= f.label :登録イラスト ,class:"pl-3"%>
          </div>
          <div class="col-6">
            <%= f.file_field :picture_image%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">

          </div>
          <div class="col-3">
            <%= f.label :タイトル,class:"pl-3"%>
          </div>
          <div class="col-6">
            <%= f.text_field :title,:placeholder=>"タイトル",size:30%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">

          </div>
          <div class="col-3">
            <%= f.label :イラスト説明,class:"pl-3"%>
          </div>
          <div class="col-6">
            <%= f.text_area :body,:placeholder=>"説明",size:"30x5"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">

          </div>
          <div class="col-3">
            <%= f.label :価格,class:"pl-3" %>
          </div>
          <div class="col-6">
            <%= f.text_field :price,size:1 %>0コイン
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">

          </div>
          <div class="col-3">
            <%= f.label :販売ステータス,class:"pl-3"%>
          </div>
          <div class="col-6">
            <%= f.radio_button :is_active, true, checked: true %>販売中  <%= f.radio_button :is_active, false%>販売停止中
          </div>
        </div>

        <div class="form-group row mt-5">
          <div class="col-4"></div>
          <div class="col-8">
            <%= f.submit "  新規登録  ",class:"a-btn a-btn-border" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
