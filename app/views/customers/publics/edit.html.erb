<div class="container back my-5">
  <div class="box1">
    <h1 class="buy">会員情報編集</h1>
  </div>



  <div class="row mt-5">
    <div class="mx-auto pb-5">
      <%= form_with model:@customer, url: updatepage_path(@customer),local:true do |f| %>
        <div class="form-group row">
          <div class="col-5">
            <%= f.label :ユーザーネーム %>
          </div>
          <div class="col-7">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-7">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-1"></div>
          <div class="col-8 mt-5">
            <%= f.submit" 編集内容を保存 ",class:"a-btn a-btn-border" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>