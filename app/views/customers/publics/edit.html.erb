<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="pb-4 mt-5">
        <span class="midashi px-3">会員情報編集</span>
      </h5>
    </div>
  </div>



    <%= form_with model:@customer, url: updatepage_path(@customer),local:true do |f| %>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label :ユーザーネーム %>
        </div>
        <div class="col-5">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-3">
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4">
        </div>
        <div class="col-5">
          <%= f.submit" 編集内容を保存 ",class:"btn btn-success" %>
        </div>
      </div>
  <% end %>
</div>