<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <div class="my-3">
      <h5 class="pb-4 mt-3">
        <span class="midashi px-3">ログイン</span>
      </h5>
      <h6 class="pb-3">
        <span class="midashi px-3 ml-5">会員の方はこちらからログイン</span>
      </h6>
    </div>
    </div>

  </div>

  <div class="row">
    <div class="mx-auto pb-5">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group row">
                <div class="col-5">
                  <%= f.label :メールアドレス %>
                </div>
                <div class="col-7">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder=>"sample@example.com",size:40%>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  <%= f.label :パスワード %>
                </div>
                <div class="col-7">
                  <%= f.password_field :password, autocomplete: "current-password" ,size:40%>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5"></div>
                <div class="col-7">
                  <%= f.submit "  ログイン  ",class:"btn btn-primary"%>
                </div>
              </div>
            <% end %>
    </div>
  </div>

   <div class="row">
     <div class="col-2"></div>
      <div class="col-10">
        <h6 class="ml-6">
          <span class="midashi px-3 ml-5"> 会員登録がお済みでない方 </span>
        </h6>
        <div class="ml-5">
            <span class="ml-5"><%=link_to"こちら",new_customer_registration_path%>から新規登録を行なってください。</span>
        </div>
      </div>
    </div>

</div>
