<div class="container back my-5">
  <div class="box1">
    <h1 class="buy">新規会員登録</h1>
  </div>
  <div class="row mt-5">
    <div class="mx-auto pb-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <div class="col-5">
            <%= f.label :"ユーザーネーム" %>
          </div>
          <div class="col-7">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-7">
            <%= f.email_field :email, autocomplete: "email" ,:placeholder=>"sample@example.com" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %> 文字以上)</span>
            <% end %>
          </div>
          <div class="col-7">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :パスワード（確認用） %>
          </div>
          <div class="col-7">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3"></div>
          <div class="col-8 mt-5">
            <%= f.submit "  新規登録  ",class:"a-btn a-btn-border1"%>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  <div class="box1">
    <h5>既に登録済みの方</h5>
  </div>
  <div class="box1">
    <h5><%= link_to"こちら",new_customer_session_path %>からログインしてください。</h5>
  </div>
</div>