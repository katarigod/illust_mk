<div class="container my-5 back">
  <h2><b>購入イラスト一覧</b><span class="total_count">(全<%= @collects.total_count %>件)</span></h2>
  <div class="row">
    <div class="big-box">
      <% @collects.each do |collect| %>

        <div class="min-box">
          <%= link_to picture_path(collect.picture_id), class: "btn-link" do %>
            <div class="image-field">
              <% if collect.picture.picture_image.attached? %>
                <%= image_tag collect.picture.picture_image ,size:"270x195" %>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            </div>
          <% end %>
          <div class="text-center">
            <h3>
              制作者：<%= collect.picture.customer.name %>
            </h3>
          </div>

          <div class="text-center">
            <%= link_to "プロフィール画像に設定", set_path(collect.id),method: :patch,class:"a-btn a-btn-radius-solid" %>
          </div>
        </div>

	     <% end %>
	  </div>
	  <div class="picture-pagenate"><%= paginate @collects %></div>
	</div>
</div>
