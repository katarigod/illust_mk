<div class="container back my-5">
  <div class="box1">
    <h1 class="buy">管理者ログイン</h1>
  </div>
  <div class="row mt-5">
    <div class="mx-auto pb-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <div class="col-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder=>"sample@example.com",size:35%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :パスワード %>
          </div>
          <div class="col-7">
            <%= f.password_field :password, autocomplete: "current-password" ,size:35%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3"></div>
          <div class="col-8 mt-5">
            <%= f.submit "  ログイン  ",class:"a-btn a-btn-border"%>
          </div>
        </div>
      <% end %>
      <%- if controller_name != 'sessions' %>
        <%= link_to(new_session_path(resource_name),class:"a-btn a-btn-border")do %><span>Log in</span><% end %>
      <% end %>
    </div>
  </div>
</div>