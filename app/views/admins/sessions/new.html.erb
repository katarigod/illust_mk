<div class="container">
  <div class="row">
    <div class="col my-3">
      <h5 class="pb-4 pl-5 mt-3">
        <span class="midashi px-3">管理者ログイン</span>
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto pb-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <div class="col-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder=>"sample@example.com",size:40%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :パスワード %>
          </div>
          <div class="col-7">
            <%= f.password_field :password, autocomplete: "current-password" ,size:40%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5"></div>
            <div class="col-7">
              <%= f.submit "  ログイン  ",class:"btn btn-primary"%>
            </div>
          </div>
          <% end %>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name) %><br />
          <% end %>
    </div>
  </div>
</div>